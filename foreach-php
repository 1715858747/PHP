<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<title>php-遍历数组--叮当猫</title>
	</head>
	<body>
		<?php
			/*
				array_keys--返回keys
			*/

			$arr = array('name' => '张三', 'age' => 23, 'address' => '湖北省孝感市');
			foreach($arr as $key => $value){
				echo $key,":",$value,'<br/>';
			}

			$str = array_keys($arr);//获取keys
			print_r($str);
		?>
	</body>
</html>
